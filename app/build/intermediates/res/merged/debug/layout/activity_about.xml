<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_about"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.systemcare.systemcare.AboutActivity">

    <Button
        android:text="@string/title_activity_termos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="197dp"
        android:id="@+id/btn_termos"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:onClick="callTermos" />

    <Button
        android:text="@string/title_activity_politica"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:id="@+id/btn_politica"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_alignTop="@+id/btn_termos"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="@string/title_activity_licenca"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_licenca"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_below="@+id/btn_politica"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="@string/title_activity_contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_contato"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_below="@+id/btn_licenca"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="@string/title_activity_test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_contato"
        android:id="@+id/btn_ajuda"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/logo"
        android:id="@+id/imageView"
        android:layout_above="@+id/btn_termos"
        android:layout_centerHorizontal="true" />


